<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7sp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/guessPupupMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10sp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/returnButton"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:onClick="clickReturnButton"
                app:srcCompat="@android:drawable/ic_delete" />
        </FrameLayout>

        <TextView
            android:id="@+id/playerNamePupup"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7sp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="7sp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/numCode1"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n0" />

                <Space
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/writeCode1"
                    android:layout_width="152dp"
                    android:layout_height="51dp"
                    android:layout_weight="1"
                    android:background="@drawable/field_text"
                    android:backgroundTint="@color/material_dynamic_neutral90"
                    android:ems="10"
                    android:hint="کلمه"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_secondary_variant" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="7sp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/numCode1"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n0" />

                <Space
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/writeCode1"
                    android:layout_width="152dp"
                    android:layout_height="51dp"
                    android:layout_weight="1"
                    android:background="@drawable/field_text"
                    android:backgroundTint="@color/material_dynamic_neutral90"
                    android:ems="10"
                    android:hint="کلمه"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_secondary_variant" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginVertical="7sp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/numCode1"
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/n0" />

                <Space
                    android:layout_width="20sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/writeCode1"
                    android:layout_width="152dp"
                    android:layout_height="51dp"
                    android:layout_weight="1"
                    android:background="@drawable/field_text"
                    android:backgroundTint="@color/material_dynamic_neutral90"
                    android:ems="10"
                    android:hint="کلمه"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_secondary_variant" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10sp"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:text="ثبت"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>