<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pregame"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".view.PreGameActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/teamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="نام تیم"
                android:textSize="28sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:rotationY="-1"
                    android:text="1"
                    android:textSize="60sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/word1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="کلمه"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:rotationY="-1"
                    android:text="2"
                    android:textSize="60sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/word2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="کلمه"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:rotationY="-1"
                    android:text="3"
                    android:textSize="60sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/word3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="کلمه"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:rotationY="-1"
                    android:text="4"
                    android:textSize="60sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/word4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="کلمه"
                    android:textAlignment="center" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layoutRadioGroups"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="زمان هر دور" />

                    <RadioGroup
                        android:id="@+id/timePerRound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checkedButton="@id/radio_button2"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <RadioButton
                            android:id="@+id/radio_button1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:onClick="clickTimePerRound"
                            android:tag="1"
                            android:text="1" />

                        <RadioButton
                            android:id="@+id/radio_button2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="clickTimePerRound"
                            android:tag="2"
                            android:text="1.5" />

                        <RadioButton
                            android:id="@+id/radio_button3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="clickTimePerRound"
                            android:tag="3"
                            android:text="2" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تعداد دور" />

                    <RadioGroup
                        android:id="@+id/numRound"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:checkedButton="@id/nr2">

                        <RadioButton
                            android:id="@+id/nr1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="clickNumRound"
                            android:tag="1"
                            android:text="4" />

                        <RadioButton
                            android:id="@+id/nr2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="clickNumRound"
                            android:tag="2"
                            android:text="5" />

                        <RadioButton
                            android:id="@+id/nr3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:onClick="clickNumRound"
                            android:tag="3"
                            android:text="6" />
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:text="بازیکنان:"
                    android:textAlignment="viewEnd"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/player1"
                        android:layout_width="150sp"
                        android:layout_height="45sp"
                        android:layout_weight="1"
                        android:background="@drawable/field_text"
                        android:ems="10"
                        android:hint="player name"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/num1"
                        android:layout_width="5sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="28sp" />

                    <ImageView
                        android:id="@+id/addPlayer1"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="clickAdderPlayer"
                        app:srcCompat="@drawable/remove" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/player2"
                        android:layout_width="150dp"
                        android:layout_height="45sp"
                        android:layout_weight="1"
                        android:background="@drawable/field_text"
                        android:ems="10"
                        android:hint="player name"
                        android:textAlignment="center"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/num2"
                        android:layout_width="5sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="2"
                        android:textSize="28sp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/addPlayer2"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="clickAdderPlayer"
                        app:srcCompat="@drawable/add" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/player3"
                        android:layout_width="150sp"
                        android:layout_height="45sp"
                        android:layout_weight="1"
                        android:background="@drawable/field_text"
                        android:ems="10"
                        android:hint="player name"
                        android:textAlignment="center"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/num3"
                        android:layout_width="5sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3"
                        android:textSize="28sp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/addPlayer3"
                        android:layout_width="10sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="clickAdderPlayer"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/add" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/player4"
                        android:layout_width="wrap_content"
                        android:layout_height="50sp"
                        android:layout_weight="1"
                        android:background="@drawable/field_text"
                        android:ems="10"
                        android:hint="player name"
                        android:textAlignment="center"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/num4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="4"
                        android:textSize="28sp"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/addPlayer4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="clickAdderPlayer"
                        android:visibility="invisible"
                        app:srcCompat="@drawable/add" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/submit"
            android:layout_width="104dp"
            android:layout_height="70dp"
            android:onClick="clickSubmit"
            app:srcCompat="@drawable/next_turn" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>